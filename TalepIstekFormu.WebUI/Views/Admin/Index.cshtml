@using TalepIstekFormu.WebUI.Models
@model FormListModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<div class="card">
    <div class="card-header">
        <h5>Form Listesi</h5>
    </div>
    <div class="card-body">
        <div class="row m-lg-5">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Grup Şirketi</th>
                            <th>Departman</th>
                            <th>Talep Eden Kişi</th>
                            <th>Form Oluşturulma Tarihi</th>
                            <th>İlgili Departman</th>
                            <th>Form Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FormLists)
                        {
                        <tr>
                            <td>@item.FormId</td>
                            <td>@item.CompanyName</td>
                            <td>@item.DepartmentName</td>
                            <td>@item.EmployFullName </td>
                            <td>@item.OlusturulmaTarih.ToString("dd/mm/yyyy")</td>
                            <td>@item.IlgiliDepartmentName</td>
                            <td>@item.FormDurum</td>
                            <td style="width:12%">
                                    <a href="/Admin/Detail/@item.FormId" class="btn btn-outline-warning">Detay</a>
                                    <a href="/Admin/Edit/@item.FormId" class="btn btn-outline-success">Düzenle</a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


