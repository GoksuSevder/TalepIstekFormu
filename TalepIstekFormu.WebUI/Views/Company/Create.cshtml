@using TalepIstekFormu.WebUI.Models
@model CompanyModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<div class="card">
    <div class="card-header">
        <h5 class="mt-3">Şirket Ekle</h5>
    </div>
    <form action="/Company/Create" method="post">
        <div class="card-body">
            <div class="row m-auto ml-5">
                <div class="input-group mb-3" style="width:30%">
                    <span class="input-group-text" id="basic-addon1">Şirket Adı</span>
                    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control " })
                </div>

            </div>
        </div>
        <div class="card-footer">
            <div class="row justify-content-end ml-3">
                <input type="submit" class="btn btn-outline-info" name="name" value="Kaydet" />
            </div>
        </div>
    </form>
</div>
